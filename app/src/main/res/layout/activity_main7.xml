<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <ImageView
        android:id="@+id/header"
        android:layout_width="410dp"
        android:layout_height="49dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/header" />

    <TextView
        android:id="@+id/registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="171dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="171dp"
        android:text="ESTADÍSTICAS"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <Spinner
        android:id="@+id/listaCategorias"
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registro" />

    <TextView
        android:id="@+id/opciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Opciones"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/listaCategorias"
        app:layout_constraintStart_toStartOf="@+id/listaCategorias" />

    <TextView
        android:id="@+id/datosEstadisticas"
        android:layout_width="304dp"
        android:layout_height="90dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/textarea"
        android:ems="10"
        android:gravity="start|top"
        android:hint=" Data"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaCategorias" />

    <ImageButton
        android:id="@+id/casa"
        android:layout_width="65dp"
        android:layout_height="57dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="homes"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/footer"
        android:layout_width="409dp"
        android:layout_height="54dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/footer" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultados"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/datosEstadisticas"
        app:layout_constraintStart_toStartOf="@+id/datosEstadisticas" />


</androidx.constraintlayout.widget.ConstraintLayout>